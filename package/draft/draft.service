[Unit]
Description=Launcher which wraps around the standard interface
After=home.mount
StartLimitIntervalSec=600
StartLimitBurst=4
Conflicts=launcher.service

[Service]
ExecStart=/opt/bin/draft
Restart=on-failure
RestartSec=5
Environment="HOME=/home/root"

[Install]
WantedBy=multi-user.target
