    pkgdesc="Wordle clone"
    url="https://rmkit.dev/apps/wordlet"
    pkgver=0.0.1-2
    section="games"

    package() {
        install -D -m 755 "$srcdir"/src/build/wordlet "$pkgdir"/opt/bin/wordlet
        install -D -m 644 "$srcdir"/src/wordlet/wordlet.draft "$pkgdir"/opt/etc/draft/wordlet.draft
    }

